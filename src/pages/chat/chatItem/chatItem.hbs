<li class="list-block__item">
    <div class="chat-item">
        <div class="chat-item__in">
            <div class="chat-item__left">
                <img class="chat-left-avatar"
                     src="{{src}}" alt="Аватар собеседника">
            </div>
            <div class="chat-item__right">
                <div class="chat-item__name">{{name}}</div>
                <div class="chat-item__text">{{text}}</div>
            </div>
            <div class="chat-item__abs">
                <div class="chat-item__time">{{date}}</div>
                <div class="chat-item__unread">{{unread}}</div>
            </div>
        </div>
    </div>
</li>